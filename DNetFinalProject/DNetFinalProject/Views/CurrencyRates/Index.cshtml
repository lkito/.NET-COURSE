@model IEnumerable<DNetFinalProject.Models.CurrencyRate>

@{
    ViewBag.Title = "Currency Rates";
}

<h2>Available Currency rates</h2>

<p>
    @Html.ActionLink("Edit / Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurrencyCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyRateGEL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellRateGEL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CurrencyCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BuyRateGEL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellRateGEL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Create", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
